<div class="w-full">
  <h1 class="text-2xl text-center text-blue-500 mb-10 font-bold">Productos en tiempo real</h1>
  <div class="md:flex w-full">
    <div class="md:w-1/3 max-w-2xl px-4 lg:px-10 mb-10 md:mb-0">
      <h2 class="text-lg text-blue-500 font-bold mb-4">Agregar producto</h2>
      <form id="productForm">

        <label class="flex flex-col text-sm text-slate-600 mb-4">
          Nombre
          <input
            name="name"
            class="border border-solid border-slate-400 rounded-md p-2 text-base mt-1 focus:outline-blue-400 text-slate-700"
            type="text"
            placeholder="Nombre del producto"
          />
        </label>

        <label class="flex flex-col text-sm text-slate-600 mb-4">
          Descripción
          <textarea
            name="description"
            class="border border-solid border-slate-400 rounded-md p-2 text-base mt-1 focus:outline-blue-400 text-slate-700 resize-none"
            type="text"
            placeholder="Descripción del producto"
            rows="3"
          ></textarea>
        </label>

        <label class="flex flex-col text-sm text-slate-600 mb-4">
          Imágenes
          <input
            id="fileInput"
            name="thumbnails"
            class="border border-solid border-slate-400 rounded-md p-2 text-base mt-1 focus:outline-blue-400 text-slate-700"
            type="file"
            multiple="true"
            accept="image/png, image/jpeg, image/webp"
            placeholder="Imágenes del producto"
          />
        </label>

        <label class="flex flex-col text-sm text-slate-600 mb-4">
          Categoría
          <select
            name="category"
            class="border border-solid border-slate-400 rounded-md p-2 text-base mt-1 focus:outline-blue-400 text-slate-600"
          >
            <option class="text-slate-700" value="zapatillas">Zapatillas</option>
            <option class="text-slate-700" value="buzos">Buzos</option>
            <option class="text-slate-700" value="camperas">Camperas</option>
            <option class="text-slate-700" value="relojes">Relojes</option>
            <option class="text-slate-700" value="anteojos">Anteojos</option>
          </select>
        </label>

        <label class="flex flex-col text-sm text-slate-600 mb-4">
          Código
          <input
            name="code"
            class="border border-solid border-slate-400 rounded-md p-2 text-base mt-1 focus:outline-blue-400 text-slate-700"
            type="text"
            placeholder="Código de producto"
          />
        </label>

        <fieldset class="mb-4">
          <legend class="flex flex-col text-sm text-slate-600 mb-1">Status</legend>
          <label class="mr-4 text-slate-700">
            Publicado
            <input type="radio" name="status" value="true" />
          </label>

          <label class="text-slate-700">
            No publicado
            <input type="radio" name="status" value="false" />
          </label>
        </fieldset>

        <div class="flex gap-4 mb-6">
          <label class="flex flex-col text-sm text-slate-600 w-2/3">
            Precio
            <input
              name="price"
              class="price-input border border-solid border-slate-400 rounded-md p-2 text-base mt-1 focus:outline-blue-400 text-slate-700"
              type="number"
              min="0"
              value="1"
              placeholder="Precio unitario"
            />
          </label>

          <label class="flex flex-col text-sm text-slate-600 w-1/3">
            Stock
            <input
              name="stock"
              class="border border-solid border-slate-400 rounded-md p-2 text-base mt-1 focus:outline-blue-400 text-slate-700"
              type="number"
              min="1"
              value="1"
              placeholder="Stock"
            />
          </label>
        </div>
        <button
          type="submit"
          class="bg-blue-500 text-white py-3 px-5 rounded-md hover:bg-blue-400 transition-colors"
        >Agregar producto</button>
      </form>
    </div>
    <div id="cards-container" class="md:w-2/3 px-4 lg:px-10 flex flex-wrap gap-2 lg:gap-4">
    </div>
  </div>
</div>
<script src="/socket.io/socket.io.js"></script>
<script src="https://unpkg.com/embla-carousel/embla-carousel.umd.js"></script>
<script src="/js/realtimeproducts.js"></script>